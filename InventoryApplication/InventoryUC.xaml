<UserControl x:Class="InventoryApplication.InventoryUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Loaded="Window_Loaded"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InventoryApplication"
             mc:Ignorable="d" 
             d:DesignHeight="540" d:DesignWidth="1010">
    <Grid Background="#FFD8D5D5">
        <ListView Name="InventoryList" HorizontalAlignment="Left" Height="520" Margin="10,10,0,0" VerticalAlignment="Top" Width="990">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Item Type" DisplayMemberBinding="{Binding Type}"/>
                    <GridViewColumn Header="Item Name" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Serial Number" DisplayMemberBinding="{Binding SerialNo}"/>
                    <GridViewColumn Header="Location" DisplayMemberBinding="{Binding Location}"/>
                    <GridViewColumn Header="Checked Out By" DisplayMemberBinding="{Binding CODate}"/>
                    <GridViewColumn Header="Checkout Date" DisplayMemberBinding="{Binding RetDate}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</UserControl>
