<Page x:Class="InventoryApplication.StartScreen"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:InventoryApplication"
      mc:Ignorable="d" 
      d:DesignHeight="540" d:DesignWidth="1010"
      Title="StartScreen">

    <Grid Background="White">
        <TextBlock Text="Welcome to the IMS!" VerticalAlignment="Center" HorizontalAlignment="Center" Padding="0,0,0,200" FontFamily="Segoe UI Semibold" FontSize="24"/>
        <TextBlock Text="Use the left menu to checkout an item, return it or check the current inventory status." VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" FontFamily="Segoe UI Light"/>
    </Grid>
</Page>
